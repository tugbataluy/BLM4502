<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage"
    android:id="@+id/my_drawer_layout"
    android:background="#FBF3D5">
  <RelativeLayout
      android:id="@+id/homepage_layout"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <include
        layout="@layout/page_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/general_addiction_btn"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="@drawable/homepage_buttons"
        android:drawableStart="@raw/cage"
        android:drawablePadding="30dp"
        android:gravity="fill_vertical"
        android:paddingLeft="30dp"
        android:text="Bağımlılık"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="125dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="normal"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/drug_addiction_btn"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="@drawable/homepage_buttons"
        android:backgroundTint="@color/substance_addiction_bg"
        android:drawableLeft="@raw/overdose"
        android:drawablePadding="30dp"
        android:gravity="fill_vertical"
        android:paddingLeft="30dp"
        android:text="Madde Bağımlılığı"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="240dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="normal"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/tech_addiction_btn"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="@drawable/homepage_buttons"
        android:backgroundTint="@color/tech_addiction_bg"
        android:drawableLeft="@raw/smartphone"
        android:drawablePadding="20dp"

        android:gravity="fill_vertical"
        android:paddingLeft="30dp"
        android:text="Teknoloji Bağımlılığı"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="355dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="normal"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/alcohol_addiction_btn"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="@drawable/homepage_buttons"
        android:backgroundTint="@color/alcohol_addicton_bg"
        android:drawableLeft="@raw/addiction"
        android:drawablePadding="20dp"

        android:gravity="fill_vertical"
        android:paddingLeft="30dp"
        android:text="Alkol Bağımlılığı"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="470dp"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textColor="#000000"
        android:clickable="true"
       />


  </RelativeLayout>
  <include layout="@layout/nav_view"/>



</androidx.drawerlayout.widget.DrawerLayout>