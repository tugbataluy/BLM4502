<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF3D5">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            style="@style/title_style"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:background="@color/toolbar_background"
            android:gravity="center"
            android:text="Neyi Amaçlıyoruz?"
            android:textColor="#FBF3D5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/image_top">

            <ImageView
                android:id="@+id/back_to_mainpage_icon"
                android:layout_width="72dp"
                android:layout_height="54dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="140dp"
                android:clickable="true"
                android:src="@drawable/back_arrow_red" />
            <ImageView
                android:id="@+id/purpose"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="140dp"
                android:src="@raw/purpose" />
        </RelativeLayout>

        <TextView
            android:id="@+id/purpose_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:text="@string/purpose_text"
            android:layout_below="@+id/image_top"
            android:textSize="18sp"
            android:textColor="@color/black" />

    </RelativeLayout>
    </ScrollView>
</LinearLayout>