<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubstanceAddictionMainPage"
    android:background="@color/app_pages_bg"
    android:id="@+id/my_drawer_layout_subs_main"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/substance_addiction_main_page_layout">
            <ImageView
                android:id="@+id/substance_image_first"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_centerHorizontal="true"
                android:src="@raw/subs1"/>
            <ImageView
                android:id="@+id/back_to_mainmenu"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/back_arrow_red"
                android:layout_alignTop="@id/substance_image_first"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/what_is_subs_addiciton_title"
                android:layout_width="match_parent"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/what_is_subs_ad_title"
                android:layout_alignTop="@id/substance_image_first"
                android:textAppearance="@style/subs_main_title"
                android:layout_marginTop="220dp"
                android:background="@drawable/general_addiction_title"
                android:backgroundTint="@color/subs_addiction_content_title_bg"
                android:layout_centerHorizontal="true"
                android:gravity="center"/>
            <TextView
                android:id="@+id/what_is_subs_add_content"
                android:layout_width="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/what_is_subs_addiciton_title"
                android:text="@string/what_is_subs_ad_content"
                android:textAppearance="@style/subs_main_contents"
                android:background="@drawable/general_addiction_text"
                android:backgroundTint="@color/subs_addiction_content_text_bg"
                android:layout_marginTop="35dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/what_is_subs_add_type"
                android:layout_width="match_parent"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_height="wrap_content"
                android:text="@string/subs_add_types"
                android:layout_alignTop="@id/what_is_subs_add_content"
                android:layout_marginTop="150dp"
                android:background="@drawable/general_addiction_title"
                android:backgroundTint="@color/subs_addiction_content_title_bg"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:textAppearance="@style/subs_main_title"/>
            <TextView
                android:id="@+id/subs_add_type_content"
                android:layout_width="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_height="wrap_content"
                android:text="@string/subs_add_types_conent"
                android:background="@drawable/general_addiction_text"
                android:backgroundTint="@color/subs_addiction_content_text_bg"
                android:layout_alignTop="@id/what_is_subs_add_type"
                android:layout_marginTop="58dp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:gravity="left"
                android:layout_centerHorizontal="true"
                android:textAppearance="@style/subs_main_contents"/>
            <TextView
                android:id="@+id/what_is_subs_treatment_title"
                android:layout_width="match_parent"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/subs_add_type_content"
                android:layout_marginTop="250dp"
                android:layout_centerHorizontal="true"
                android:text="@string/subs_add_treatment"
                android:textAppearance="@style/subs_main_title"
                android:padding="10dp"
                android:background="@drawable/general_addiction_title"
                android:backgroundTint="@color/subs_addiction_content_title_bg"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/what_is_subs_treatment_context"
                android:layout_width="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/what_is_subs_treatment_title"
                android:text="@string/subs_add_treatmet_context"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:background="@drawable/general_addiction_text"
                android:backgroundTint="@color/subs_addiction_content_text_bg"
                android:padding="10dp"
                android:textAppearance="@style/subs_main_contents"
                android:layout_marginBottom="100dp"
                />

            <ImageView
                android:id="@+id/subs_add_img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/what_is_subs_treatment_context"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="150dp"
                android:src="@raw/subs_img2"
                />
            <ImageView
                android:id="@+id/symptoms_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/subs_add_img2"
                android:src="@raw/subs_diagnose"
                android:layout_marginTop="250dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_centerHorizontal="true"
                />
            <GridView
                android:layout_centerHorizontal="true"
                android:layout_alignTop="@id/symptoms_title"
                android:id="@+id/subs_grid1"
                android:layout_width="match_parent"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:numColumns="3"
                android:verticalSpacing="5dp"
                android:horizontalSpacing="3dp"
                android:stretchMode="columnWidth"
                android:gravity="center"
                />

            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/subs_test_title"
                android:layout_alignTop="@id/subs_grid1"
                android:layout_marginTop="150dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@raw/subs_test"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"/>
            <TextView
                android:layout_marginTop="50dp"
                android:layout_alignTop="@id/subs_test_title"
                android:id="@+id/warning_subs"
                android:layout_width="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/warning_bg"
                android:backgroundTint="@color/subs_addiction_content_text_bg"
                android:padding="15dp"
                android:text="@string/warning_ga"
                android:textAppearance="@style/subs_warning_text"
                android:layout_centerHorizontal="true"
                android:drawableEnd="@raw/subs_warning"
                />
            <GridView
                android:layout_centerHorizontal="true"
                android:id="@+id/subs_grid2"
                android:layout_alignTop="@id/warning_subs"
                android:layout_width="match_parent"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_height="270dp"
                android:numColumns="3"
                android:verticalSpacing="7dp"
                android:horizontalSpacing="3dp"
                android:stretchMode="columnWidth"
                android:gravity="center"
                android:layout_marginTop="200dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="20dp"/>

        </RelativeLayout>

    </ScrollView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include layout="@layout/page_toolbar"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <include layout="@layout/bottom_nav"
            android:id="@+id/bottom_temp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <include
        layout="@layout/nav_view"
        android:visibility="invisible"/>

</androidx.drawerlayout.widget.DrawerLayout>