<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlcoholAddictionMainPage"
    android:background="@color/app_pages_bg"
    android:id="@+id/my_drawer_layout_alcohol">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/alcohol_addiction_main_page_relative_layout"
            >
            <ImageView
                android:id="@+id/alcohol_img1"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:src="@raw/alcoholic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="75dp"
                />
            <ImageView
                android:id="@+id/back_to_mainpage_icon"
                android:src="@drawable/back_arrow_red"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignLeft="@id/alcohol_img1"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="-45dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/what_is_alcohol_addiction_title"
                android:background="@drawable/general_addiction_title"
                android:layout_alignTop="@id/alcohol_img1"
                android:layout_marginTop="225dp"
                android:backgroundTint="@color/alcohol_addiction_title_bg"
                android:text="@string/what_is_alcohol_addiction_title"
                android:gravity="center"
                android:padding="10dp"
                android:textAppearance="@style/alcohol_addiction_titles_style"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/what_is_alcohol_addiction_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/general_addiction_text"
                android:backgroundTint="@color/alcohol_addiction_content_bg"
                android:layout_alignTop="@id/what_is_alcohol_addiction_title"
                android:layout_marginTop="40dp"
                android:text="@string/what_is_alcohol_addiction_text"
                android:textAppearance="@style/alcohol_addiction_content_style"
                android:gravity="center"
                android:padding="15dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/alcohol_addiction_diagnose_title"
                android:text="@string/alcohol_addiction_diagnose_title"
                android:background="@drawable/general_addiction_title"
                android:layout_alignTop="@id/what_is_alcohol_addiction_content"
                android:layout_marginTop="140dp"
                android:backgroundTint="@color/alcohol_addiction_title_bg"
                android:textAppearance="@style/alcohol_addiction_titles_style"
                android:padding="15dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/alcohol_addiction_diagnose_content"
                android:layout_alignTop="@id/alcohol_addiction_diagnose_title"
                android:backgroundTint="@color/alcohol_addiction_content_bg"
                android:background="@drawable/general_addiction_text"
                android:layout_marginTop="50dp"
                android:text="@string/alcohol_addiction_diagnose_text"
                android:textAppearance="@style/alcohol_addiction_content_style"
                android:padding="15dp"
                android:gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:id="@+id/alcohol_img2"
                android:layout_width="300dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/alcohol_addiction_diagnose_content"
                android:src="@raw/alcohol_addict"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="150dp"
                />
            <TextView
                android:id="@+id/alcohol_addiction_effects_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/general_addiction_title"
                android:backgroundTint="@color/alcohol_addiction_title_bg"
                android:layout_alignTop="@id/alcohol_img2"
                android:layout_marginTop="250dp"
                android:text="@string/alcohol_addiction_effects_title"
                android:padding="15dp"
                android:textAppearance="@style/alcohol_addiction_titles_style"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"/>
            <TextView
                android:id="@+id/alcohol_addiction_effects_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/alcohol_addiction_content_bg"
                android:background="@drawable/general_addiction_text"
                android:layout_alignTop="@id/alcohol_addiction_effects_title"
                android:layout_marginTop="70dp"
                android:text="@string/alcohol_addiction_effects_text"
                android:textAppearance="@style/alcohol_addiction_content_style"
                android:padding="15dp"
                android:layout_marginBottom="75dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:src="@raw/alcohol_symptoms"
                android:layout_alignTop="@id/alcohol_addiction_effects_content"
                android:layout_marginTop="415dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/alcohol_addiction_symptoms"
                />
            <GridView
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/alcohol_addiction_symptoms_grid"
                android:layout_alignTop="@id/alcohol_addiction_symptoms"
                android:layout_marginTop="30dp"
                android:numColumns="3"
                android:verticalSpacing="5dp"
                android:horizontalSpacing="3dp"
                android:stretchMode="columnWidth"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/alcohol_img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/alcohol_addiction_symptoms_grid"
                android:src="@raw/tremens"
                android:layout_marginTop="350dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/what_is_tremens_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/alcohol_img3"
                android:background="@drawable/general_addiction_title"
                android:backgroundTint="@color/alcohol_addiction_title_bg"
                android:text="@string/what_is_delirium_tremens_title"
                android:textAppearance="@style/alcohol_addiction_titles_style"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginTop="200dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                />
            <TextView
                android:id="@+id/what_is_tremens_content"
                android:layout_alignTop="@id/what_is_tremens_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/general_addiction_text"
                android:backgroundTint="@color/alcohol_addiction_content_bg"
                android:text="@string/what_is_delirium_tremens"
                android:textAppearance="@style/alcohol_addiction_content_style"
                android:padding="15dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/tremens_title"
                android:layout_alignTop="@id/what_is_tremens_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@raw/tremens_title"
                android:layout_marginTop="175dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/tremens_symptoms"
                android:layout_alignTop="@id/tremens_title"
                android:background="@drawable/warning_bg"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="220dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/alcohol_addiction_content_bg"
                android:text="@string/symptoms_of_delirium_tremens"
                android:padding="15dp"
                android:gravity="left"
                android:textAppearance="@style/alcohol_addiction_content_style"/>
            <TextView
                android:id="@+id/tremens_symptoms2"
                android:layout_alignTop="@id/tremens_title"
                android:background="@drawable/warning_bg"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="220dp"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/alcohol_addiction_content_bg"
                android:text="@string/symptoms_of_delirium_tremens2"
                android:padding="15dp"
                android:gravity="left"
                android:textAppearance="@style/alcohol_addiction_content_style"/>
            <ImageView
                android:id="@+id/alcohol_test_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tremens_symptoms"
                android:layout_marginTop="230dp"
                android:src="@raw/alcohol_tests"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/alcohol_test_warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/warning_bg"
                android:layout_alignTop="@id/alcohol_test_img"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/alcohol_addiction_title_bg"
                android:text="@string/warning_ga"
                android:textAppearance="@style/alcohol_addiction_warning_style"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:drawableEnd="@raw/warning_alc"
                android:drawablePadding="5dp"
                android:padding="20dp"/>
            <GridView
                android:layout_alignTop="@id/alcohol_test_warning"
                android:id="@+id/alcohol_addiction_test_grid"
                android:layout_width="match_parent"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_height="270dp"
                android:numColumns="3"
                android:verticalSpacing="7dp"
                android:horizontalSpacing="3dp"
                android:stretchMode="columnWidth"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="175dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="40dp"/>





        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include layout="@layout/page_toolbar"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <include layout="@layout/bottom_nav_view"
            android:id="@+id/bottom_nav_id"
            android:visibility="visible">

        </include>
    </RelativeLayout>
    <include
        layout="@layout/nav_view"
        android:visibility="invisible"/>
</androidx.drawerlayout.widget.DrawerLayout>