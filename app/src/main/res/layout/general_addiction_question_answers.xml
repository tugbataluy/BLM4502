<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/my_drawer_layout"
    android:background="@color/app_pages_bg"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/my_relative_layout">
            <TextView
                android:id="@+id/question_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOREM IPSUM"
                android:layout_marginTop="75dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/general_addiction_test_text"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="15dp"
                />
            <TextView
                android:id="@+id/answer_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
                android:layout_marginTop="120dp"
                android:textSize="16sp"
                android:textColor="#1F3890"
                android:layout_marginBottom="100dp"
                />

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="48dp"
                android:layout_height="60dp"
                android:layout_alignBottom="@id/answer_view"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="120dp"
                android:layout_marginBottom="-40dp"
                android:clickable="true"
                android:src="@drawable/back_arrow_red" />

        </RelativeLayout>

    </ScrollView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include layout="@layout/page_toolbar"
            android:id="@+id/title_template"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <include layout="@layout/bottom_nav"
            android:id="@+id/bottom_temp"

            />
    </RelativeLayout>
    <include
    layout="@layout/nav_view"
    android:visibility="invisible"/>

</androidx.drawerlayout.widget.DrawerLayout>