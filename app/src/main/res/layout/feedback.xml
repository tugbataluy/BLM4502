<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF3D5">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            style="@style/title_style"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:background="@color/toolbar_background"
            android:gravity="center"
            android:text="Geri Bildirim"
            android:textColor="#FBF3D5"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back_to_mainpage_icon"
                android:layout_width="72dp"
                android:layout_height="54dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="140dp"
                android:clickable="true"
                android:src="@drawable/back_arrow_red" />

            <ImageView
                android:id="@+id/user_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="160dp"
                android:layout_marginTop="140dp"
                android:src="@raw/feedback" />
        </RelativeLayout>

        <TextView
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="260dp"
            android:gravity="center"
            android:shadowColor="#31363F"
            android:shadowDx="0"
            android:shadowDy="4"
            android:shadowRadius="2"
            android:text="Deneyimlerinizi paylaşınız."
            android:textColor="@color/alt_toolbar_icon_color"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/feedback"
            android:layout_width="270dp"
            android:layout_height="140dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="350dp"
            android:background="@drawable/edittext_border"
            android:hint="Yorum Yaz.."
            android:textSize="15sp"
            android:textAlignment="center"
            android:textAppearance="@style/feedback_style"/>

        <!-- Yıldızlar -->
        <ImageView
            android:id="@+id/star1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginStart="75dp"
            android:src="@drawable/feedback_circle"
            android:layout_below="@+id/feedback"
            android:onClick="starClicked" /> <!-- Boş yıldız simgesi -->

        <ImageView
            android:id="@+id/star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@id/star1"
            android:layout_below="@+id/feedback"
            android:src="@drawable/feedback_circle"
            android:onClick="starClicked" /> <!-- Boş yıldız simgesi -->

        <ImageView
            android:id="@+id/star3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginStart="23dp"
            android:layout_toRightOf="@id/star2"
            android:layout_below="@+id/feedback"
            android:src="@drawable/feedback_circle"
            android:onClick="starClicked" /> <!-- Boş yıldız simgesi -->

        <ImageView
            android:id="@+id/star4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginStart="23dp"
            android:layout_toRightOf="@id/star3"
            android:layout_below="@+id/feedback"
            android:src="@drawable/feedback_circle"
            android:onClick="starClicked" /> <!-- Boş yıldız simgesi -->

        <ImageView
            android:id="@+id/star5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginStart="23dp"
            android:layout_toRightOf="@id/star4"
            android:layout_below="@+id/feedback"
            android:src="@drawable/feedback_circle"
            android:onClick="starClicked" /> <!-- Boş yıldız simgesi -->

        <Button
            android:id="@+id/feedback_send"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/alt_toolbar_icon_color"
            android:text="Gönder"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="585dp"
            android:textColor="@color/white"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>