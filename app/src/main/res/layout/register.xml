<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2FFE9">
    <View
        android:id="@+id/rectangle_1"
        android:layout_width="match_parent"
        android:layout_height="159dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#A6CF98"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@raw/register_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        />
    <EditText
        android:id="@+id/user_name_edit"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:background="@drawable/login_elems"
        android:drawableStart="@drawable/person"
        android:paddingLeft="20dp"
        android:hint="Ad Soyad"
        android:textSize="18sp"

        />
    <EditText
        android:id="@+id/email_edit"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="325dp"
        android:background="@drawable/login_elems"
        android:drawableStart="@drawable/email"
        android:paddingLeft="20dp"
        android:hint="E-posta Adresi"
        android:textSize="18sp"
        />
    <EditText
        android:id="@+id/password_edit"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="395dp"
        android:background="@drawable/login_elems"
        android:drawableStart="@drawable/password"
        android:paddingLeft="20dp"
        android:hint="Şifre"
        android:textSize="18sp"
        />
    <EditText
        android:id="@+id/password_recap_edit"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="470dp"
        android:background="@drawable/login_elems"
        android:paddingLeft="20dp"
        android:drawableStart="@drawable/password"
        android:hint="Şifre Tekrarı"
        android:textSize="18sp"

        />

    <Button
        android:id="@+id/kayit_ol_register"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/login_buttons"

        android:text="Kayıt Ol"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"

        android:layout_alignParentTop="true"
        android:layout_marginTop="570dp"/>
    <ImageView
        android:id="@+id/back_home_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_arrow"
        android:layout_alignParentBottom="true"
        android:paddingBottom="50dp"
        android:layout_marginLeft="30dp"
        android:clickable="true"/>




</RelativeLayout>