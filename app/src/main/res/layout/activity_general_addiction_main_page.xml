<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GeneralAddictionMainPage"
    android:id="@+id/my_drawer_layout"
    android:background="#FBF3D5"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/general_addiction_layout"
        >

        <ImageView
            android:id="@+id/back_to_mainpage_icon"
            android:layout_width="72dp"
            android:layout_height="54dp"
            android:layout_alignStart="@id/first_pic"
            android:layout_marginStart="-75dp"
            android:layout_marginTop="140dp"
            android:src="@drawable/back_arrow_red"
            android:clickable="true"
            />

        <ImageView
            android:id="@+id/first_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@raw/addiction_depressed"
            android:layout_centerHorizontal="true"
            android:paddingTop="120dp"/>
        <TextView
            android:id="@+id/what_is_addiction_title"
            android:layout_alignTop="@id/first_pic"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="275dp"
            android:text="@string/general_addiction_title1"
            android:textAppearance="@style/general_addiction_content_style1"
            android:textSize="16sp"
            android:background="@drawable/general_addiction_title"/>
        <TextView
            android:layout_alignTop="@id/what_is_addiction_title"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:id="@+id/content1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:text="@string/general_addiction_content1"
            android:textAppearance="@style/general_addiction_content_style1"
            android:textSize="14sp"
            android:background="@drawable/general_addiction_text"/>
        <ImageView
            android:id="@+id/dongu_view"
            android:layout_alignTop="@id/content1"
            android:layout_width="match_parent"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_height="300dp"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:src="@raw/dongupng"/>
        <TextView
            android:layout_alignTop="@id/dongu_view"
            android:id="@+id/how_does_addiction_occurs_title"
            android:layout_width="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginTop="320dp"
            android:layout_centerHorizontal="true"
            android:text="@string/general_addiction_title2"
            android:textSize="16sp"
            android:textAppearance="@style/general_addiction_content_style1"
            android:gravity="center"
            android:background="@drawable/general_addiction_title"/>
        <TextView
            android:layout_alignTop="@id/how_does_addiction_occurs_title"
            android:id="@+id/how_does_addiction_occurs_text"
            android:layout_width="match_parent"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="15dp"
            android:layout_marginBottom="15dp"
            android:text="@string/general_addiction_content2"
            android:background="@drawable/general_addiction_text"
            android:textAppearance="@style/general_addiction_content_style1"
            />
        <ImageView
            android:id="@+id/img_add"
            android:layout_width="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_height="150dp"
            android:src="@raw/banner"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@id/how_does_addiction_occurs_text"
            android:layout_marginTop="225dp"
            android:paddingBottom="15dp"/>
        <ImageView
            android:id="@+id/belirti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@raw/subtitle1_ga"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@id/img_add"
            android:layout_marginTop="150dp"
            />

        <GridView
            android:layout_alignTop="@id/belirti"
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_height="600dp"
            android:numColumns="3"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="3dp"
            android:stretchMode="columnWidth"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"

            />

        <ImageView
            android:id="@+id/tests_title"
            android:layout_alignTop="@id/gridView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:src="@raw/ilginc_ga"
            android:layout_centerHorizontal="true"
            android:padding="5dp"/>
        <TextView
            android:layout_alignTop="@id/tests_title"
            android:id="@+id/warning"
            android:layout_width="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:background="@drawable/warning_bg"
            android:text="@string/warning_ga"
            android:textAppearance="@style/general_addiction_content_style1"
            android:drawableEnd="@raw/mandatory"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:padding="15dp"
            android:layout_marginBottom="25dp"/>
        <GridView
            android:layout_alignTop="@id/warning"
            android:id="@+id/gridView3"
            android:layout_width="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_height="270dp"
            android:numColumns="3"
            android:verticalSpacing="7dp"
            android:horizontalSpacing="3dp"
            android:stretchMode="columnWidth"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="40dp"/>
    </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include layout="@layout/page_toolbar"
            android:id="@+id/title_template"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <include layout="@layout/bottom_nav_view"
            android:id="@+id/bottom_nav_id"/>
    </RelativeLayout>
    <include
        layout="@layout/nav_view"
        android:visibility="invisible"/>

</androidx.drawerlayout.widget.DrawerLayout>