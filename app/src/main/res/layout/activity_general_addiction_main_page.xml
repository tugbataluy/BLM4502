<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GeneralAddictionMainPage"
    android:id="@+id/my_drawer_layout"
    android:background="#FBF3D5">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/general_addiction_layout"
        >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@raw/addiction_depressed"
            android:layout_centerHorizontal="true"
            android:paddingTop="120dp"/>
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="275dp"
            android:text="@string/general_addiction_title1"
            android:textAppearance="@style/general_addiction_content_style1"
            android:textSize="16sp"
            android:background="@drawable/general_addiction_title"/>
        <TextView
            android:id="@+id/content1"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="310dp"
            android:text="@string/general_addiction_content1"
            android:textAppearance="@style/general_addiction_content_style1"
            android:textSize="14sp"
            android:background="@drawable/general_addiction_text"/>
        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="415dp"
            android:layout_centerHorizontal="true"
            android:src="@raw/dongupng"/>
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginTop="740dp"
            android:layout_centerHorizontal="true"
            android:text="@string/general_addiction_title2"
            android:textSize="16sp"
            android:textAppearance="@style/general_addiction_content_style1"
            android:gravity="center"
            android:background="@drawable/general_addiction_title"/>
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="775dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/general_addiction_content2"
            android:background="@drawable/general_addiction_text"
            android:textAppearance="@style/general_addiction_content_style1"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:src="@raw/banner"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="975dp"
            android:paddingBottom="15dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@raw/subtitle1_ga"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1130dp"
            />

        <GridView
            android:id="@+id/gridView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="3dp"
            android:stretchMode="columnWidth"
            android:gravity="center"
            android:layout_marginTop="1160dp"
            />
        <GridView
            android:id="@+id/gridView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="2dp"
            android:stretchMode="columnWidth"
            android:gravity="center"
            android:layout_marginTop="1320dp"
            android:layout_marginBottom="20dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1465dp"
            android:src="@raw/ilginc_ga"
            android:layout_centerHorizontal="true"
            android:padding="5dp"/>
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1500dp"
            android:background="@drawable/warning_bg"
            android:text="@string/warning_ga"
            android:textAppearance="@style/general_addiction_content_style1"
            android:drawableEnd="@raw/mandatory"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:padding="15dp"
            android:layout_marginBottom="15dp"/>
        <GridView
            android:id="@+id/gridView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="2dp"
            android:stretchMode="columnWidth"
            android:gravity="center"
            android:layout_marginTop="1700dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="25dp"/>
    </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include layout="@layout/page_toolbar"
            android:id="@+id/title_template"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <include
        layout="@layout/nav_view"
        android:visibility="invisible"/>

</androidx.drawerlayout.widget.DrawerLayout>