<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GeneralAddictionVideosPage"
    android:id="@+id/my_drawer_layout"
    android:background="#FBF3D5"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/general_addiction_videos_layout">
            <GridView
                android:id="@+id/video_list"
                android:layout_width="match_parent"
                android:layout_marginRight="25dp"

                android:layout_height="1200dp"
                android:layout_marginTop="90dp"

                android:layout_centerHorizontal="true"
                android:layout_marginLeft="25dp"
                android:verticalSpacing="10dp"
                android:numColumns="1"
                android:layout_marginBottom="100dp"

                />





        </RelativeLayout>

    </ScrollView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <include layout="@layout/page_toolbar"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <include layout="@layout/bottom_nav_view"
        android:id="@+id/bottom_nav_id"/>

    </RelativeLayout>
    <include
        layout="@layout/nav_view"
        android:visibility="invisible"/>

</androidx.drawerlayout.widget.DrawerLayout>