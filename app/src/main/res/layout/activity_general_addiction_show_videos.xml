<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GeneralAddictionShowVideos"
    android:background="#FBF3D5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ga_show_videos_layout">
        <TextView
            android:id="@+id/video_title_view"
            android:layout_marginTop="90dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="LOREM"
            android:gravity="center"
            android:background="@drawable/warning_bg"
            android:padding="15dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="14sp"/>

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/youtube_video_player"
        android:layout_alignTop="@id/video_title_view"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginTop="75dp"
        android:layout_centerHorizontal="true"
        />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <include layout="@layout/page_toolbar"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <include layout="@layout/bottom_nav"
            android:id="@+id/bottom_temp"

            />
    </RelativeLayout>
    <include
        layout="@layout/nav_view"
        android:visibility="invisible"/>
</androidx.drawerlayout.widget.DrawerLayout>